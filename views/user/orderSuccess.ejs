<%-include("../partials/user/header.ejs") -%>

    <div class="container ">
        <div class="row justify-content-center">
            <!-- <div class=""> -->
                <div class="card shadow-sm col-md-6 text-center mt-5">
                    <div class="card-body p-5">
                        <i class="fas fa-check-circle text-success display-1 mb-4"></i>
                        <h2 class="mb-3">Order Confirmed!</h2>
                        <p class="text-muted mb-4">Thank you for your purchase. Your order has been successfully placed.</p>
                        
                        <div class="bg-light p-2 rounded mb-4">
                            <h5>Order Details</h5>
                            <%if(orderData){%>
                                <div class="d-flex justify-content-between mt-2">
                                    <span>Order Number:</span>
                                    <strong><%=orderData.orderId%></strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Total Amount:</span>
                                    <strong><%=orderData.orderPrice.toFixed(2)%></strong>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <%if(orderData.paymentMethod==='razorpay'&& orderData.paymentStatus==='Paid'){%>
                                        <span>Receipt No:<%=orderData.receipt%></span>
                                    <%}else{%>   
                                        <span>Invoice No :<%=orderData.invoiceNo%></span>
                                    <%}%>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <a href="/orders/detailedOrderView/<%=orderData.orderId%>" class="btn btn-primary">View Order Details</a>
                                <a href="/shop" class="btn btn-outline-secondary">Continue Shopping</a>
                            </div>
                        </div>
                    </div>
                    
                    <p class="mt-3 text-muted">
                        A confirmation email has been sent to your registered email address.
                    </p>
                <%}else{%>
                    <div>errorFetching order details</div>   
                <%}%>
            <!-- </div> -->
        </div>
    </div>

    <%-include("../partials/user/footer.ejs") -%>>