<%-include("../partials/user/header.ejs") -%>

    <div class="container">
        <div class="row justify-content-center min-vh-100 align-items-center">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow">
                    <div class="card-body p-4">
                        <h4 class="text-center mb-3">Change Email Address</h4>
                        <p class="text-muted text-center small mb-4">Please verify your identity to change your email address</p>
                        
                        <!-- Password Verification -->
                        <form id="passwordForm" class="mb-4"  action="/verifyPassword" method="post">
                            <div class="mb-3">
                                <label for="password" class="form-label">Enter Account Password</label>
                                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                                <% if (locals.message && message.length > 0) { %>
                                    <div class="alert alert-danger"><%= message %></div>
                                    <% } %>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    Continue with Password
                                </button>
                            </div>
                        </form>

                        <!-- Divider -->
                        <div class="position-relative my-4">
                            <hr>
                            <div class="position-absolute top-50 start-50 translate-middle bg-white px-3">
                                OR
                            </div>
                        </div>

                        <!-- OTP Option -->
                        <div class="text-center mb-3">
                            <small class="text-muted">Verify using OTP instead</small>
                        </div>
                        <div class="d-grid">
                            <a class="btn btn-success" href="/verifyEmail">
                                Send OTP to Current Email
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    
