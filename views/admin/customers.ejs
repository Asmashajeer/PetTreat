<%-include("../partials/admin/header") -%>
<div class="container-fluid mt-2 bg-custom ">
    <div class="d-flex justify-content-between align-items-center">
      <h4 class="content-title card-title">Customers</h4>
      
    </div>
  <div class="card row mt-3 mx-auto d-flex col-md-8">      
    <div class="card-header mb-4">
      <h6 class="text-center">All Customers</6>
    </div>
      <form action="/admin/users/" method="get" class="d-flex flex-column align-items-center ">
        <div class="input-group input-group-sm border border-1 border-grey rounded-pill  px-0  " style="width: 550px;">
            <input type="text" class="form-control border-0 rounded-pill" placeholder="Search customers..." name="search">
            <button class="btn  border-0" type="submit">Search</button>
        </div>
      </form>
    <div class=" mt-5  m-auto ">
        <table class=" table table-striped p-5 border-top shadow">
            <thead>
            <tr>
                <th scope="col"><strong>Name</strong></th>
                <th scope="col"><strong>Email</strong></th>
                <th scope="col"><strong>Action</strong></th>
            </tr>
            </thead>
            <tbody>
              <%for( let i=0;i<data.length;i++){%>  
                  <tr>
                        <td><%=data[i].name%></td>
                        <td><%=data[i].email%></td>                      
                        <td> 
                          <%if(data[i].isBlocked===false){%>                                
                              <a href="/admin/blockCustomer?id=<%=data[i]._id%>" class="btn btn-sm btn-outline-danger" style="text-decoration: none;">Block</a>                               
                          <%}else{%>    
                              <a href="/admin/unblockCustomer?id=<%=data[i]._id%>" class="btn btn-sm btn-outline-success" style="text-decoration: none;">Unblock</a>                                
                          <%}%>
                        </td>
                    </tr>
              <%}%>      
            </tbody>
        </table>
    </div>
    <div class="pagination d-flex justify-content-center pb-2">
      <%if (currentPage>1){%>
          <a href="?page=<%= currentPage-1 %>">&laquo;</a>
      <%}%>
       <%for(let i=1;i<=totalPages;i++){%> 
          <%if(i==currentPage){%>
              <span  class="current-page bg-custom "><%= i %></span>
          <%}else{%>
              <a href="?page=<%= i %>"><%= i %></a>
      <%}}%>
      <%if (currentPage<totalPages){%>
          <a href="?page=<%= currentPage+1 %>"> &raquo; </a>
      <% }%>      
  </div>
</div>         
</div> 
</div>         
  <%-include("../partials/admin/footer") -%>