<%- include("../../views/partials/admin/header") %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-60">
           <h3>Edit category</h3>
            <form method="post" action="/admin/editCategory/<%=category._id%>">
                
                <div class="mb-4 mt-30">
                    <label for="category_name" class="form-label">Name</label>
                    <input type="text" name="name" value="<%=category.name%>" class="form-control border" />

                </div>
                
                <div class="mb-4">
                    <label class="form-label">Description</label>
                    <textarea name="description" class="form-control border"><%=category.description%> </textarea>
                </div>
                <%if(locals.message && message.length>0){%>
                    <div class="alert alert-danger text-center">
                        <%=message%>
                    </div>
                 <%}%>
                 <div class="row">
                    <div class="d-grid text-end  col-md-5">
                    <button class="btn btn-primary" type="submit" title="Save changes">Save </button>                    
                    </div>
                    <div class="d-grid text-end  col-md-5">
                    <a  href="/admin/category" class="btn btn-primary" >Cancel</a>                    
                    </div>
                 </div>   
                
                
            </form>
        </div>
    </div>
</div>
<%- include("../../views/partials/admin/footer") %>
