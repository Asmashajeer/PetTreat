    // Fetch revenue data from server
    async function fetchRevenue(chartType) {
        try {
            console.log(`Fetching revenue for: ${chartType}`); 
            const response = await fetch(`/admin/dashboard/chart/${chartType}`);
            const data = await response.json();
            if (!data.length) {
                console.warn("No data found, using test data!");
                updateChart(['No Data'], [0]);
                return;
            }
            const labels = data.map(entry => entry._id);
            const revenueData = data.map(entry => entry.totalRevenue);
            updateChart(labels, revenueData);

        } catch (error) {
            console.error("Error fetching revenue data:", error);
        }
    }

    // Function to update the chart data
    function updateChart(labels, data) {
        salesChart.data.labels = labels;
        salesChart.data.datasets[0].data = data;
        salesChart.update();
    }

    // Function to set the active button
    function setActiveButton(activeButton) {
        dailyButton.classList.remove('active');
        weeklyButton.classList.remove('active');
        monthlyButton.classList.remove('active');
        yearlyButton.classList.remove('active');
        activeButton.classList.add('active');
    }

    // Button event listeners
    dailyButton.addEventListener('click', function () {
        fetchRevenue('daily');
        setActiveButton(dailyButton);
    });

    weeklyButton.addEventListener('click', function () {
        fetchRevenue('weekly');
        setActiveButton(weeklyButton);
    });

    monthlyButton.addEventListener('click', function () {
        fetchRevenue('monthly');
        setActiveButton(monthlyButton);
    });

    yearlyButton.addEventListener('click', function () {
        fetchRevenue('yearly');
        setActiveButton(yearlyButton);
    });
    // Fetch daily revenue on page load
    fetchRevenue("daily");
    setActiveButton(dailyButton); //  Mark the daily button as active




