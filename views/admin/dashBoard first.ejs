<%-include("../partials/admin/header") -%>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
  <!-- Main Content -->
  <div class="col-md-10 p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Dashboard Overview</h2>
            <div>
                <button class="btn btn-primary">
                    <i class="fas fa-download me-2"></i> Export Report
                </button>
            </div>
        </div>

    <!-- Total Sales, Orders, Users, Products Stats -->
    <div class="row">
        <!-- Total Sales -->
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted">Total Sales&nbsp;<i class="fas fa-coins  text-success"></i></h6>
                            <h4 class="mb-0">₹ <%=Total.totalSales.toFixed(2)%></h4>
                        </div>
                        <div>
                            
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">Today: ₹ <%=Total.todaySales.toFixed(2)%></small>
                        
                        <small class="text-muted">This Month: ₹ <%=Total.monthSales.toFixed(2)%></small>
                        
                    </div>
                   
                </div>
            </div>
        </div>
        
        <!-- Total Orders -->
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted">Total Orders</h6>
                            <h3 class="mb-0"><%=Total.totalOrders%></h3>
                        </div>
                        <div>
                            <i class="fas fa-shopping-bag  text-success"></i>
                        </div>
                    </div>
                    <div class="mt-1 ">
                        <small class="text-success">Completed: <%=Total.totalOrderCompleted%></small><br>
                        <small class="text-warning">Pending: <%=Total.totalOrderPending%></small><br>
                        <small class="text-danger">Canceled: <%=Total.totalOrderCancelled%></small><br>
                        <small class="text-info">Returned: <%=Total.totalOrderReturned%></small><br>
                    </div>
                    
                </div>
            </div>
        </div>
        
        <!-- Total Users -->
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted">Total Users</h6>
                            <h3 class="mb-0" ></h3><%=Total.totalUsers%></h3>
                        </div>
                        <div>
                            <i class="fas fa-users  text-success"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-success">Active: <%=Total.activeUsers%></small>
                      
                        <small class="text-danger ">Banned: <%=Total.blockedUsers%></small>
                    </div>
                   
                </div>
            </div>
        </div>
        
        <!-- Total Products -->
        <div class="col-md-3">
            <div class="card stat-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title text-muted">Total Products</h6>
                            <h5 class="mb-0"><%=Total.totalProducts%></h5>
                        </div>
                        <div>
                            <i class="fas fa-box  text-success"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-success">In Stock: <%=Total.productsInStock%></small><br>
                        <small class="text-danger ">OutOf Stock: <%=Total.productsOutofStock%></small>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
    
    <!-- Revenue Statistics Chart & Top Selling Products -->
    <div class="row mt-3">
        <!-- Revenue Statistics Chart -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Revenue Statistics</h5>
                    <div class="btn-group" role="group">    
                        <button type="button" class="btn btn-sm btn-outline-secondary active">Daily</button>                    
                        <button type="button" class="btn btn-sm btn-outline-secondary">Weekly</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">Monthly</button>
                        <button type="button" class="btn btn-sm btn-outline-secondary">Yearly</button>
                    </div>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart" height="250"></canvas>
                </div>
            </div>
        </div>      
        <!-- top selling product chart -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Top Selling Products</h5>
                </div> 
                <div class="card-body"></div>  
                    <!-- Chart.js Pie Chart -->
                    <canvas id="topSellingChart"  height="250"></canvas>
                </div>    
            </div>
        </div>
    </div>
</div>
    
    <!-- Recent Orders  -->
    <div class="row mt-3">
        <!-- Recent Orders -->
        <div class="col-md-10">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Orders</h5>
                    <button class="btn btn-sm btn-outline-primary">View All</button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%if(orders.length>0){%>
                                   <% orders.forEach(order=>{%>
                                        <tr>
                                            <td><%=order.orderId%></td>
                                            <td><%=order.userId.name%></td>
                                            <td><%=moment(order.createdOn).format("DD-MM-YYYY")%></td>
                                            <td><%=order.orderPrice%></td>
                                            <%if(order.status==="Placed"){%>
                                                <td><span class="badge bg-warning"><%=order.status%></span></td>
                                            <%}else if(order.status==="Processing"){%>
                                                <td><span class="badge bg-info"><%=order.status%></span></td>
                                            <%}else if(order.status==="shipped"){%>
                                                <td><span class="badge bg-primary"><%=order.status%></span></td> 
                                            <%}else if(order.status==="Delivered"){%>
                                                <td><span class="badge bg-success"><%=order.status%></span></td>
                                            <%}else if(order.status==="Cancelled"){%>
                                                <td><span class="badge bg-danger"><%=order.status%></span></td> 
                                            <%}else if(order.status==="Returned"){%>
                                                <td><span class="badge bg-secondary"><%=order.status%></span></td>
                                            <%}%>        
                                        </tr>
                                    <%})%>    
                                <%}%>    
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        
    </div>
    <div class="row mt-3">
        <!-- Top-Selling Products -->
       <div class="col-md-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Top-Selling Products</h6>
                    <button class="btn btn-sm btn-outline-primary">View All</button>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                    <%if(topSellingProducts.length>0){%>
                        <%topSellingProducts.forEach(product=>{%>
                            <div class="list-group-item p-1 d-flex align-items-center">                            
                                <div class="flex-grow-1">
                                    <p class="mb-0"><strong><%=product.productInfo.productName%></strong></p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted"><%=product.totalQuantitySold%></small>
                                        <span class="fw-normal">₹<%=product.productInfo.regularPrice.toFixed(2)%></span>
                                    </div>
                                    
                                </div>
                            </div>
                        <%})%>
                    <%}%>        
                            
                    </div>
                </div>
            </div>
        </div>    
        <!-- Wallet Balance Overview -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Wallet Balance Overview</h5>
                </div>
                <div class="card-body">
                    <h3 class="text-center mb-4">$78,450.85</h3>
                    <h6 class="text-muted">Total User Wallet Balance</h6>
                    
                    <div class="mt-4">
                        <h6>Recent Transactions</h6>
                        <div class="list-group list-group-flush">
                            <div class="list-group-item p-2 d-flex justify-content-between align-items-center">
                                <div>
                                    <small class="d-block">Customer #1245</small>
                                    <small class="text-muted">Wallet Deposit</small>
                                </div>
                                <span class="badge bg-success">+$250.00</span>
                            </div>
                            <div class="list-group-item p-2 d-flex justify-content-between align-items-center">
                                <div>
                                    <small class="d-block">Customer #8754</small>
                                    <small class="text-muted">Wallet Withdrawal</small>
                                </div>
                                <span class="badge bg-danger">-$120.50</span>
                            </div>
                            <div class="list-group-item p-2 d-flex justify-content-between align-items-center">
                                <div>
                                    <small class="d-block">Customer #9876</small>
                                    <small class="text-muted">Purchase Payment</small>
                                </div>
                                <span class="badge bg-danger">-$350.00</span>
                            </div>
                            <div class="list-group-item p-2 d-flex justify-content-between align-items-center">
                                <div>
                                    <small class="d-block">Customer #5432</small>
                                    <small class="text-muted">Refund</small>
                                </div>
                                <span class="badge bg-success">+$75.20</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid mt-3">
                        <button class="btn btn-sm btn-outline-primary">View All Transactions</button>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</div>
</div>
</div>

